<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/btnExample1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer 1" />

    <Button
        android:id="@+id/btnExample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer 2" />

    <Button
        android:id="@+id/btnFavoriteContribs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Contributors" />

    <Button
        android:id="@+id/btnFavoriteRepos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Repositories" />


</LinearLayout>